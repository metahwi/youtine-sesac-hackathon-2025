# MongoDB Configuration
# Local MongoDB URL (default)
MONGODB_URI=mongodb://localhost:27017/fittrack

# Or use MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fittrack?retryWrites=true&w=majority

# OpenAI API Configuration
# Required for AI-powered exercise detection from YouTube transcripts
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# YouTube Data API (Optional)
# Used for enhanced video metadata
# Get your API key from: https://console.cloud.google.com/apis/credentials
# YOUTUBE_API_KEY=your-youtube-api-key-here

# Server Configuration
# Port number for the Express server (default: 3000)
PORT=3000

# Node Environment
NODE_ENV=development
